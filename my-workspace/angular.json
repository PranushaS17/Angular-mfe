{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "puthu-lib": {
      "projectType": "library",
      "root": "projects/puthu-lib",
      "sourceRoot": "projects/puthu-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/puthu-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/puthu-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/puthu-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/puthu-lib/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"],
            "styles": [
              "node_modules/bootstrap/scss/bootstrap.scss",
              "node_modules/bootstrap-icons/font/bootstrap-icons.css"
            ]
          }
        }
      }
    }
  }
}
